<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">

    <LinearLayout
        android:id="@+id/logo_top"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:background="@drawable/signup_bg"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/image_logo"
            android:layout_marginTop="50dp"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:src="@drawable/airbnb" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SignUp"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Your Account"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/box_create"
        android:layout_below="@+id/logo_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        >

        <EditText
            android:padding="10dp"
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="10dp"
            android:paddingLeft="10dp"
            android:layout_marginTop="6dp"
            android:drawableLeft="@drawable/baseline_person_24"
            android:drawablePadding="10dp"
            android:hint="User Name"
            android:inputType="text"
            android:background="@drawable/bg_textbox"
            />

        <EditText
            android:padding="10dp"
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="10dp"
            android:paddingLeft="10dp"
            android:drawableLeft="@drawable/email_logo"
            android:drawablePadding="10dp"
            android:layout_marginTop="6dp"
            android:hint="Email address"
            android:background="@drawable/bg_textbox"
            android:inputType="textEmailAddress" />

        <EditText
            android:padding="10dp"
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="10dp"
            android:paddingLeft="10dp"
            android:drawableLeft="@drawable/password_logo"
            android:drawablePadding="10dp"
            android:layout_marginTop="6dp"
            android:hint="Password"
            android:background="@drawable/bg_textbox"
            android:inputType="textPassword" />


        <Button
            android:id="@+id/btn_singup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:background="@drawable/linear_background"
            android:text="Sign Up"
            android:textStyle="bold"

            />

    </LinearLayout>

</RelativeLayout>